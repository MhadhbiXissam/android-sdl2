{
    "python.defaultInterpreterPath": "${workspaceFolder}.venv/bin/python",
    "editor.tabSize": 4,
    "files.exclude": {
        "**/.git": true,
        "**/.vscode": false,
        "**/__pycache__": true , 
        "**/.venv" : true ,
    },
    "explorer.excludeGitIgnore": false , 
    "runOnStart.commands": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": "Run make onstartup"
        }
      ] , 
      "terminal.integrated.defaultProfile.linux": "WithCommand",
      "terminal.integrated.profiles.linux": {
          "WithCommand": {
              "path": "/bin/bash",
              "args": [
                  "-c",
                  "docker exec -it app_display bash; exec bash"
              ]
          }
      }
}
